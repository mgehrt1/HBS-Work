@model IEnumerable<ASP_MVCApp.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Expenses</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Expense" asp-action="Spend" class="btn btn-primary">Add new Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0) {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th>Expense</th>
                    <th>Amount</th>
                    <th>Changes</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var expense in Model) {
                    <tr>
                        <td width="35%">@expense.ExpenseName</td>
                        <td width="35%">@expense.Amount</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } else {
        <p>No expenses yet</p>
    }

</div>